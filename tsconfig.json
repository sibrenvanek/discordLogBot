{
	"compilerOptions": {
		"target": "esnext",
		"module": "commonjs",
		"outDir": "./build",
		"rootDir": "./src",
		"declaration": false,
		"strict": true,
		"sourceMap": true,
		"noImplicitAny": true,
		"alwaysStrict": true,
	},
	"exclude": [
		"./build/*",
		"./node_modules/*",
	],
	"include": [
		"./src/**/*.ts"
	]
}